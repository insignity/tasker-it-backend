// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   // "client" or "tasker"
  tasks     Task[]   @relation("UserTasks")
  createdAt DateTime @default(now())
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  status      String   @default("open")
  price       Float
  clientId    Int
  client      User     @relation("UserTasks", fields: [clientId], references: [id])
  createdAt   DateTime @default(now())
}
